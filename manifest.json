{
	"description": "pass.dog password manager",
	"manifest_version": 2,
	"name": "pass.dog",
	"version": "0.0.1",
	"homepage_url": "https://jaaap.github.io/pass.dog/",
	"applications": {
		"gecko": {
			"id": "info@pass.dog"
		}
	},
	"icons": {
		"256": "icons/icon-256.png"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content.js"],
			"run_at": "document_end"
		}
	],
	"permissions": [
		"http://*/*",
		"https://*/*",
		"tabs",
		"activeTab",
		"webRequest",
		"webRequestBlocking",
		"storage"
	],
	"browser_action": {
		"browser_style": true,
		"default_icon": "icons/icon-256.png",
		"default_title": "pass.dog",
		"default_popup": "popup.html"
	},
	"background": {
		"scripts": ["crypto.js","tlds.js","utils.js","background.js"],
		"persistent": false
	}
}
