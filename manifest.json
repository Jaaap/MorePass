{
	"description": "MorePass password manager",
	"manifest_version": 2,
	"name": "MorePass",
	"version": "0.0.1",
	"homepage_url": "https://jaaap.github.io/MorePass/",
	"applications": {
		"gecko": {
			"id": "morepass@am6.nl"
		}
	},
	"icons": {
		"256": "icons/icon-256.png"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content.js"],
			"run_at": "document_end"
		}
	],
	"permissions": [
		"*://am6.nl/morepass/*",
		"tabs",
		"activeTab",
		"storage"
	],
	"browser_action": {
		"default_icon": "icons/icon-256.png",
		"default_title": "MorePass",
		"default_popup": "popup.html"
	},
	"background": {
		"scripts": ["crypto.js","tlds.js","utils.js","background.js"],
		"persistent": false
	}
}
